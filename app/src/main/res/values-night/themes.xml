<resources>
    <!-- Base application theme. -->
    <style name="Theme.UmaLibrary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/app_bg</item>
        <item name="cardBackgroundColor">@color/darkPurple</item>
        <item name="backgroundColor">@color/black</item>
        <item name="subtitleTextColor">@color/darkSub</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="normalTextColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
</resources>